<p style="color: green"><%= notice %></p>

<h1>Records</h1>

<div id="records">
  <% @records.each do |record| %>
    <%= render record %>
    <p>
      <%= link_to "Show this record", record %>
      <%= render_async record_stats_path %>
    </p>
  <% end %>
</div>

